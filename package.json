{
  "name": "type-plus",
  "version": "0.0.0-development",
  "description": "Provides additional types for TypeScript.",
  "homepage": "https://github.com/unional/type-plus",
  "bugs": {
    "url": "https://github.com/unional/type-plus/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/unional/type-plus.git"
  },
  "license": "MIT",
  "author": {
    "name": "Homa Wong (unional)",
    "email": "homawong@gmail.com"
  },
  "sideEffects": false,
  "type": "module",
  "exports": {
    "import": "./esm/index.js",
    "require": "./cjs/index.js"
  },
  "main": "./cjs/index.js",
  "typings": "./cjs/index.d.ts",
  "files": [
    "cjs",
    "esm",
    "ts",
    "!ts/**/*.spec.ts",
    "!ts/types",
    "!ts/type-checker"
  ],
  "scripts": {
    "build": "run-p build:cjs build:esm build:tslib",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:esm": "tsc -p tsconfig.esm.json",
    "build:tslib": "tsc -p tsconfig.tslib.json",
    "build:doc": "typedoc",
    "clean": "rimraf cjs coverage esm lib libm && mkdir cjs && echo '{\"type\":\"commonjs\"}' > cjs/package.json || true",
    "coverage": "jest --coverage",
    "depcheck": "depcheck",
    "lint": "eslint --ext=ts,js .",
    "nuke": "yarn clean && rimraf node_modules",
    "postinstall": "husky install",
    "prepack": "pinst --disable",
    "postpack": "pinst --enable",
    "size": "size-limit",
    "test": "jest",
    "verify": "npm-run-all clean -p build depcheck lint coverage -p size",
    "watch": "yarn test --watch"
  },
  "dependencies": {
    "tersify": "^3.10.2",
    "unpartial": "^1.0.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.2",
    "@commitlint/config-conventional": "^17.0.2",
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^8.0.5",
    "@semantic-release/npm": "^9.0.1",
    "@size-limit/preset-small-lib": "^8.0.0",
    "@types/jest": "^29.0.0",
    "@typescript-eslint/eslint-plugin": "^5.28.0",
    "@unional/fixture": "^3.0.0",
    "assertron": "^10.0.0",
    "depcheck": "^1.4.3",
    "eslint": "^8.17.0",
    "eslint-plugin-harmony": "^7.1.0",
    "husky": "^8.0.1",
    "jest": "^29.0.0",
    "jest-watch-suspend": "^1.1.2",
    "jest-watch-toggle-config": "^2.0.1",
    "jest-watch-typeahead": "^2.0.0",
    "npm-run-all": "^4.1.5",
    "pinst": "^3.0.0",
    "rimraf": "^3.0.2",
    "satisfier": "^5.2.2",
    "semantic-release": "^19.0.3",
    "size-limit": "^8.0.0",
    "ts-jest": "^28.0.5",
    "tslib": "^2.4.0",
    "typedoc": "^0.23.0",
    "typedoc-plugin-extras": "^2.2.3",
    "typescript": "4.8.3"
  },
  "packageManager": "yarn@3.2.3",
  "size-limit": [
    {
      "path": "./cjs/index.js",
      "limit": "15 kb"
    },
    {
      "path": "./esm/index.js",
      "limit": "15 kb"
    },
    {
      "path": "./tslib/index.js",
      "limit": "15 kb"
    }
  ]
}
