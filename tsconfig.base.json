{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "lib": [
      "ES2015",
      "ES2021.Promise"
    ],
    "isolatedModules": true,
    "newLine": "LF",
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "sourceMap": true,
    "strict": true,
    "stripInternal": true,
    "useDefineForClassFields": true
  },
  "exclude": [
    "ts/type-checker",
    "ts/types"
  ],
  "include": [
    "ts",
    "typings"
  ]
}
