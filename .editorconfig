# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_size = 2
indent_style = tab
trim_trailing_whitespace = true

[*.{md,mdx}]
max_line_length = off

[*.{yml,yaml}]
indent_style = space
insert_final_newline = false
max_line_length = off

[*.{json,code-workspace}]
insert_final_newline = false

[.vscode/ltex.*.txt]
insert_final_newline = false
