# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_size = 2
indent_style = tab
trim_trailing_whitespace = true

[*.{md,mdx}]
indent_style = space
max_line_length = 0

[*.{yml,yaml}]
indent_style = space
