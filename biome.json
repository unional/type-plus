{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"extends": ["@repobuddy/biome/recommended"],
	"vcs": {
		"defaultBranch": "main",
		"clientKind": "git",
		"enabled": true,
		"useIgnoreFile": true
	},
	"files": {
		"ignore": [
			".changeset/*.json",
			".turbo",
			".vscode/*.txt",
			"./docs",
			"packages/*/coverage",
			"packages/*/cjs",
			"packages/*/dist",
			"packages/*/esm",
			"packages/*/tslib",
			"old/checker",
			"packages/type-plus/src/types",
			"packages/type-plus/src/type-checker",
			"apps/website/dist",
			"_revealjs",
			"*.astro",
			"package.json"
		]
	},
	"linter": {
		"rules": {
			"complexity": {
				"noBannedTypes": "off"
			},
			"suspicious": {
				"noConfusingVoidType": "off"
			}
		}
	}
}
